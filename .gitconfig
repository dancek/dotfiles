[github]
    user = dancek

[core]
    editor = vim

[alias]
    st = status --short
    tree = log --graph --oneline --all --decorate --abbrev-commit

[fetch]
    prune = true
[pull]
    rebase = true
[push]
    default = current
    follow-tags = true
[rebase]
    autoSquash = true
    missingCommitsCheck = warn
    stat = true
[merge]
    tool = kdiff3
