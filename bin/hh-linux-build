#!/bin/sh
set -e

if [ ! -f .config ]; then
  echo "Run this in linux source tree root with a .config!"
  exit 1
fi

set -x

export CC="sccache clang"

make -j8

sudo cp arch/x86/boot/bzImage /boot/vmlinuz-hh
sudo make modules_install
sudo mkinitcpio --generate /boot/initramfs-hh.img --kernel /boot/vmlinuz-hh
sudo cp System.map /boot/
