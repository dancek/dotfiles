# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
}

order += "volume master"
#order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
#order += "disk /"
order += "cpu_temperature 0"
order += "load"
order += "memory"
order += "tztime local"

volume master {
}

wireless _first_ {
        format_up = "W: %ip (%quality %essid %bitrate)"
        format_down = "W: down"
        format_quality = "%d%s"
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status%percentage %remaining"
        status_chr = "âš¡"
        status_bat = "ðŸ”‹"
        status_unk = "ðŸ”Œ"
        low_threshold = 25
        threshold_type = "percentage"
}

disk "/" {
        format = "%avail"
}

cpu_temperature 0 {
        format = "%degreesÂ°C"
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon8/temp1_input"
}

load {
        format = "%1min"
}

memory {
        format = "%available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
